# 应用配置
PORT=3000
NODE_ENV=development

# SSH配置
DEFAULT_SSH_PORT=22
SSH_TIMEOUT=30000

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 安全配置
ENABLE_WHITELIST=true
MAX_COMMAND_LENGTH=1000
ALLOWED_COMMANDS=ls,pwd,whoami,ps,df,free,uptime,date,echo,uname,lscpu,lsblk,lsmem,dmidecode,hostnamectl,nproc,netstat,ss,ping,curl,wget,nslookup,dig,top,htop,pgrep,pkill,systemctl,service,journalctl,cat,head,tail,grep,find,locate,which,whereis,du,wc,sort,uniq,awk,sed,cut,tr,docker,tar,gzip,gunzip,zip,unzip,env,printenv,export,history,vi,vim,nano,less,more,clear,reset,tty,chmod,chown,chgrp,su,sudo,passwd,id,groups,ifconfig,ip,route,arp,traceroute,telnet,mount,umount,lsof,strace,crontab,at,diff,patch,tee,xargs,basename,dirname,./cc

# 数据库配置 (默认使用SQLite)
DATABASE_PATH=database.sqlite

# JWT配置 (生产环境请修改)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# 应用目录 (可执行文件路径)
APP_DIR=/root/